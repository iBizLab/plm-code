<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper	namespace="cn.ibizlab.plm.core.base.mapper.PortfolioMemberMapper">

        <!--通过mybatis将查询结果注入到entity中,通过配置autoMapping="true"由mybatis自动处理映射关系 -->
    <resultMap id="PortfolioMemberResultMap" type="cn.ibizlab.plm.core.base.domain.PortfolioMember" autoMapping="true">
		<id property="id" column="id" /><!--主键字段映射-->
		<result property="userId" column="user_id"/>
		<result property="roleId" column="role_id"/>
		<result property="portfolioName" column="portfolio_name"/>
		<result property="portfolioIdentifier" column="portfolio_identifier"/>
		<result property="createMan" column="create_man"/>
		<result property="createTime" column="create_time"/>
		<result property="updateMan" column="update_man"/>
		<result property="updateTime" column="update_time"/>
		<result property="portfolioId" column="portfolio_id"/>
        <association property="portfolio" javaType="cn.ibizlab.plm.core.base.domain.Portfolio" column="portfolio_id" select="cn.ibizlab.plm.core.base.mapper.PortfolioMapper.selectById" fetchType="lazy"></association>
    </resultMap>

    <select id="selectById"  resultMap="PortfolioMemberResultMap">
        <include refid="view" /> 
         where 
         t1.id=#{ id }
    </select>

    <select id="selectEntity" parameterType="cn.ibizlab.plm.core.base.domain.PortfolioMember" resultMap="PortfolioMemberResultMap">
        <include refid="view" /> 
         where 
         (t1.id = #{ id })
    </select>

    <select id="selectEntities" parameterType="java.util.List" resultMap="PortfolioMemberResultMap">
        <include refid="view" /> 
         where 
         (t1.id)
         in (<foreach collection="list" item="item" index="index" separator=","> (#{ item.id }) </foreach>)
    </select>

    <delete id="deleteEntities" parameterType="java.util.List">
    delete from PORTFOLIO_MEMBER
    where (id)
         in (<foreach collection="list" item="item" index="index" separator=","> (#{ item.id }) </foreach>)
    </delete>

    <sql id="default" databaseId="mysql">
         <![CDATA[ SELECT t1.`CREATE_MAN`, t1.`CREATE_TIME`, t1.`ID`, t1.`NAME`, t1.`PORTFOLIO_ID`, t11.`IDENTIFIER` AS `PORTFOLIO_IDENTIFIER`, t11.`NAME` AS `PORTFOLIO_NAME`, t1.`ROLE_ID`, t1.`UPDATE_MAN`, t1.`UPDATE_TIME`, t1.`USER_ID` FROM `PORTFOLIO_MEMBER` t1  LEFT JOIN `PORTFOLIO` t11 ON t1.`PORTFOLIO_ID` = t11.`ID`   ]]>  
    </sql>

    <sql id="view" databaseId="mysql">
         <![CDATA[ SELECT t1.`CREATE_MAN`, t1.`CREATE_TIME`, t1.`ID`, t1.`NAME`, t1.`PORTFOLIO_ID`, t11.`IDENTIFIER` AS `PORTFOLIO_IDENTIFIER`, t11.`NAME` AS `PORTFOLIO_NAME`, t1.`ROLE_ID`, t1.`UPDATE_MAN`, t1.`UPDATE_TIME`, t1.`USER_ID` FROM `PORTFOLIO_MEMBER` t1  LEFT JOIN `PORTFOLIO` t11 ON t1.`PORTFOLIO_ID` = t11.`ID`   ]]>  
    </sql>

    <sql id="curProjectSet" databaseId="mysql">
         <![CDATA[ SELECT t1.`CREATE_MAN`, t1.`CREATE_TIME`, t1.`ID`, t1.`NAME`, t1.`PORTFOLIO_ID`, t11.`IDENTIFIER` AS `PORTFOLIO_IDENTIFIER`, t11.`NAME` AS `PORTFOLIO_NAME`, t1.`ROLE_ID`, t1.`UPDATE_MAN`, t1.`UPDATE_TIME`, t1.`USER_ID` FROM `PORTFOLIO_MEMBER` t1  LEFT JOIN `PORTFOLIO` t11 ON t1.`PORTFOLIO_ID` = t11.`ID`   ]]>  where  <![CDATA[ ( t1.`USER_ID` <> #{ctx.sessioncontext.srfpersonid}  AND  t1.`PORTFOLIO_ID` = #{ctx.datacontext.id} ) ]]> 
    </sql>

    <select id="searchDefault"  parameterType="cn.ibizlab.plm.core.base.filter.PortfolioMemberSearchContext"  resultMap="PortfolioMemberResultMap">
        select t1.* 
        from (
            <include refid="default"/>
        ) t1 
        <where><if test="ew!=null and ew.sqlSegment!=null and !ew.emptyOfWhere">${ew.sqlSegment}</if></where>
        <if test="ew!=null and ew.sqlSegment!=null and ew.emptyOfWhere">${ew.sqlSegment}</if>
        
    </select>


    <select id="listDefault"  parameterType="cn.ibizlab.plm.core.base.filter.PortfolioMemberSearchContext"  resultMap="PortfolioMemberResultMap">
        select t1.*
        from (
            <include refid="default"/>
        ) t1
        <where><if test="ew!=null and ew.sqlSegment!=null and !ew.emptyOfWhere">${ew.sqlSegment}</if></where>
        <if test="ew!=null and ew.sqlSegment!=null and ew.emptyOfWhere">${ew.sqlSegment}</if>
        
    </select>

    <select id="searchCurProjectSet"  parameterType="cn.ibizlab.plm.core.base.filter.PortfolioMemberSearchContext"  resultMap="PortfolioMemberResultMap">
        select t1.* 
        from (
            <include refid="curProjectSet"/>
        ) t1 
        <where><if test="ew!=null and ew.sqlSegment!=null and !ew.emptyOfWhere">${ew.sqlSegment}</if></where>
        <if test="ew!=null and ew.sqlSegment!=null and ew.emptyOfWhere">${ew.sqlSegment}</if>
        
    </select>


    <select id="listCurProjectSet"  parameterType="cn.ibizlab.plm.core.base.filter.PortfolioMemberSearchContext"  resultMap="PortfolioMemberResultMap">
        select t1.*
        from (
            <include refid="curProjectSet"/>
        ) t1
        <where><if test="ew!=null and ew.sqlSegment!=null and !ew.emptyOfWhere">${ew.sqlSegment}</if></where>
        <if test="ew!=null and ew.sqlSegment!=null and ew.emptyOfWhere">${ew.sqlSegment}</if>
        
    </select>

    <select id="listView"  parameterType="cn.ibizlab.plm.core.base.filter.PortfolioMemberSearchContext"  resultMap="PortfolioMemberResultMap">
        select t1.*
        from (
            <include refid="view" />
        ) t1
        <where><if test="ew!=null and ew.sqlSegment!=null and !ew.emptyOfWhere">${ew.sqlSegment}</if></where>
        <if test="ew!=null and ew.sqlSegment!=null and ew.emptyOfWhere">${ew.sqlSegment}</if>
    </select>

    <select id="findByPortfolioId" resultMap="PortfolioMemberResultMap">
        select t1.* from (
            <include refid="default"/>
        ) t1
        where portfolio_id in <foreach item="id" index="index" collection="portfolioIds" open="(" separator="," close=")">#{id}</foreach> 
    </select>

    <select id="findByUserId" resultMap="PortfolioMemberResultMap">
        select t1.* from (
            <include refid="default"/>
        ) t1
        where user_id in <foreach item="id" index="index" collection="userIds" open="(" separator="," close=")">#{id}</foreach> 
    </select>


</mapper>